
@model UpdateEmployeeVM

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Update Employee</h4>

            <form method="post" enctype="multipart/form-data" class="forms-sample">
                <div class="form-group">
              
                    <input type="hidden" asp-for="Image" class="form-control" placeholder="Photo" accept="image/*">
                
                </div>
                <div class="form-group">
                    <label asp-for="Name">Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Name">
                    <span asp-validation-for="Name"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Description">Description</label>
                    <input asp-for="Description" class="form-control" placeholder="Description">
                    <span asp-validation-for="Description"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Photo">Photo</label>
                    <input asp-for="Photo" class="form-control" placeholder="Photo" accept="image/*">
                    <span asp-validation-for="Photo"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Instagram">Instagram</label>
                    <input asp-for="Instagram" class="form-control" placeholder="Instagram">
                    <span asp-validation-for="Instagram"></span>
                </div>

                <div class="form-group">
                    <label asp-for="X">X</label>
                    <input asp-for="X" class="form-control" placeholder="X">
                    <span asp-validation-for="X"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Linkedin">Linkedin</label>
                    <input asp-for="Linkedin" class="form-control" placeholder="Linkedin">
                    <span asp-validation-for="Linkedin"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Facebook">Facebook</label>
                    <input asp-for="Facebook" class="form-control" placeholder="Facebook">
                    <span asp-validation-for="Facebook"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PositionId">Position</label>
                    <select asp-for="PositionId" class="form-control" asp-items=@(new SelectList(Model.Positions,nameof(Position.Id),nameof(Position.Name)))>
                        <option selected disabled>Choose Position</option>
                    </select>
                    <span asp-validation-for="PositionId"></span>
                </div>

                <button type="submit" class="btn btn-primary me-2">Submit</button>
                <button class="btn btn-light">Cancel</button>
            </form>
        </div>
    </div>
</div>